function copyResult() {
  const textarea = document.getElementById('resultHTML');
  textarea.select();
  document.execCommand('copy');
  alert('‚úÖ ƒê√£ sao ch√©p HTML!');
}

function pick(arr) {
  return arr[Math.floor(Math.random() * arr.length)];
}
